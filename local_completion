#---
## hashcheck.sh
## simple completion from help  msg and spellname after that
#---
have hashcheck.sh &&
_hashcheck() {
  COMPREPLY=()
  local cur prev
  _get_comp_words_by_ref cur prev

    if [[ "$cur" == -* ]] ; then
        COMPREPLY=( $( compgen -W "$( _parse_help "$1" )" -- "$cur" ) )
    else
      _all_spells
    fi
} &&
complete -F _hashcheck hashcheck.sh

